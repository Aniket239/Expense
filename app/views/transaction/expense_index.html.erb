<style>
  body {
    font-family: 'Arial', sans-serif;
    background-color: #121212;
    /* Deep dark background */
    color: #e0e0e0;
    /* Light grey text for readability */
    margin: 0;
    padding: 20px 0;
    /* Padding to prevent content from sticking to the edges */
  }

  h1 {
    color: #e0e0e0;
    /* Maintaining light text for the heading */
    text-align: center;
    margin-top: 0;
    /* Adjusted to align with body padding */
    padding-top: 20px;
  }

  p {
    font-size: 18px;
    text-align: center;
    margin: 10px auto;
    /* Centering paragraph */
    color: #cccccc;
    /* Slightly lighter grey for contrast */
  }

  table {
    width: 90%;
    /* Slightly reduced table width for aesthetics */
    border-collapse: collapse;
    margin: 20px auto;
    /* Center table */
    background-color: #1e1e1e;
    /* Slightly lighter than body for depth */
    box-shadow: 0 0 20px rgba(0, 0, 0, 0.5);
    /* Deeper shadow for prominence */
  }

  th,
  td {
    padding: 15px;
    /* Increased padding for a better look */
    text-align: left;
    border-bottom: 1px solid #333;
    /* Added bottom border for definition */
  }

  th {
    background-color: #242424;
    /* Dark grey header */
    color: #f0f0f0;
    /* Lighter text for contrast */
  }

  tr:nth-child(even) {
    background-color: #2a2a2a;
    /* Even darker row background for contrast */
  }

  .edit-link,
  .delete-link {
    text-decoration: none;
    color: #4CAF50;
    /* Green for edit links for accessibility */
    margin-right: 10px;
  }

  .delete-link {
    color: #F44336;
    /* Red for delete links for caution */
  }

  .edit-link:hover,
  .delete-link:hover {
    text-decoration: underline;
  }

  .new-expense-link {
    display: block;
    width: 200px;
    /* Fixed width for consistency */
    text-align: center;
    margin: 20px auto;
    /* Centering the link */
    text-decoration: none;
    background-color: #007bff;
    /* Preserving the blue but can consider deeper blue */
    color: #fff;
    padding: 10px 20px;
    border-radius: 5px;
    transition: background-color 0.3s ease;
  }

  .new-expense-link:hover {
    background-color: #0056b3;
    /* Darker blue on hover */
  }
</style>


<h1>All Expenses</h1>
<% if @current_personnel %>
  <p>Hey <%= @current_personnel.name %>
  </p><br />
  <% else %>
    <p>Hey there!</p>
    <% end %>
      <table>
        <thead>
          <th>Name</th>
          <th>Email</th>
          <th>Item Name</th>
          <th>Amount</th>
          <th>Remarks</th>
          <th></th>
          <th></th>
        </thead>
        <tbody>
          <% @expense.each do |expense| %>
            <tr>
              <td>
                <%= expense.personnel.name %>
              </td>
              <td>
                <%= expense.personnel.email %>
              </td>
              <td>
                <%= expense.item %>
              </td>
              <td>
                <%= expense.amount %>
              </td>
              <td>
                <%= expense.remarks %>
              </td>
              <td>
                <%= link_to "Edit" , transaction_expense_edit_path(expense), class: "edit-link" %>
              </td>
              <td>
                <%= link_to "Delete" , transaction_expense_destroy_path(expense), class: "delete-link" %>
              </td>
            </tr>
            <% end %>
        </tbody>
      </table>
      <%= link_to "New Expense" , transaction_expense_new_url, class: "new-expense-link" %>

